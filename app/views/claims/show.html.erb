<p id="notice"><%= notice %></p>

<p>
  <b>Claim type:</b>
  <%= @claim.claim_type %>
</p>

<p>
  <b>Active:</b>
  <%= @claim.active %>
</p>

<p>
  <b>Claim location postcode:</b>
  <%= @claim.claim_location_postcode %>
</p>

<p>
  <b>Cost:</b>
  <%= @claim.cost %>
</p>

<p>
  <b>Date of loss:</b>
  <%= @claim.date_of_loss %>
</p>

<fieldset>
	<legend>Customers</legend>
	<% @claim.customers.each do |customer| %>
		<p><b>Name:</b> <%= customer.name %> <%= link_to 'Edit', edit_claim_customer_path(@claim, :id => customer) %></p>
		<p><b>Postcode:</b> <%= customer.postcode %></p>
		<p><b>Phone:</b> <%= customer.phone %></p>
		<p><b>Dob:</b> <%= customer.dob %></p>
		<br>
	<% end %>
	<%= link_to 'Add Customer', new_claim_customer_path(@claim) %>
</fieldset>

<fieldset>
	<legend>Notes</legend>
	<% @claim.notes.each do |note| %>
		<p><b>Id:</b> <%= note.id %> <%= link_to 'Edit', edit_claim_note_path(@claim, :id => note) %></p>
		<p><b>Author Name:</b> <%= note.author_name %></p>
		<p><b>Body Text:</b> <%= note.body_text %></p>
		<p><b>Creation Date:</b> <%= note.created_at %></p>
		<br>
	<% end %>
	<%= link_to 'Add Note', new_claim_note_path(@claim) %>
</fieldset>


<%= link_to 'Edit', edit_claim_path(@claim) %> |
<%= link_to 'Back', claims_path %>
